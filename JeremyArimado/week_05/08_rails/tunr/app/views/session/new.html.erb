<h1>Session#new</h1>
<p>Find me in app/views/session/new.html.erb</p>

<% if flash[:success] %>
    <p><%= flash[:success] %></p>
<% end %>

<% if flash[:error] %>
    <p><%= flash[:error] %></p>
<% end %>

<%= form_tag(login_path) do %>
    <p>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
    </p>

    <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </p>

    <%= submit_tag('Login') %>

<% end %>
