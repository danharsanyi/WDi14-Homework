<h2><%= @album.title %></h2>
<p><%= image_tag(@album.image, :class => 'featured') %></p>
<% if @album.artist %>
  <p>Artist: <%= link_to(@album.artist.name, @album.artist) %></p>
<% end %>
<p>Release year: <%= @album.year %></p>

<div class="controls">
  <%= link_to "Edit album", edit_album_path(@album) %>
  <%= link_to "Delete album", @album, :method => :delete, :data => { :confirm => 'Are you sure?'} %>
</div>
