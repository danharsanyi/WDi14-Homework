<h2>All books</h2>

<div>
  <% @books.each do |book| %>

    <%= image_tag book.image, :class => 'thumbnail' %>
  <div>
    <p>Title: <%= link_to book.title, "/books/#{book.id}" %></p>
    <p>Author: <%= book.author %></p>
    <p>Year: <%= book.year %></p>
    <p>Genre: <%= book.genre %></p>
  </div>

<% end %>
</div>
