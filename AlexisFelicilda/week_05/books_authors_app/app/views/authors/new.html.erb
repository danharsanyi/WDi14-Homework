<h3>Create new author</h3>


<%= form_for @author do |f| %>

<p>
  <%= f.label :name%>
  <%= f.text_field :name, :required => true %>
</p>


<p>
  <%= f.label :country %>
  <%= f.text_field :country, :required => true %>
</p>

<p>
  <%= f.label :image %>
  <%= f.url_field :image, :required => true %>
</p>


<%= f.submit %>
<% end %>
