<% @brand.models.each do |model| %>
  <%= link_to(image_tag(model.image, :class => 'thumbnail', :style => 'display:inline-block'), model) %>
  <%= link_to("explore #{model.name}", model, :class => 'test', :style => 'display:block') %>
  <% end %>

</div>
