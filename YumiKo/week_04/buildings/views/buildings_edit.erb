
<form method="POST" action="/buildings/<%= @building["id"] %>">
  <p>
    <label>Name: </label>
    <input type="text" name="name" value="<%= @building["name"] %>">
  </p>

  <p>
    <label>Image: </label>
    <input type="text" name="image" value="<%= @building["image"] %>">
  </p>

  <p>
    <label>Address: </label>
    <input type="text" name="address" value="<%= @building["address"] %>">
  </p>

  <p>
    <label>Description: </label>
    <input type="text" name="description" value="<%= @building["description"] %>">
  </p>

  <input type="submit" value="Edit Info">
</form>
